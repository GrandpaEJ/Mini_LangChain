{
    "name": "mini-langchain-node",
    "version": "0.1.0",
    "main": "index.js",
    "types": "index.d.ts",
    "description": "High-performance, cross-language LLM orchestration library with Rust core (Node.js bindings).",
    "keywords": [
        "langchain",
        "llm",
        "rust",
        "napi-rs",
        "ai",
        "rag",
        "agent",
        "sambanova",
        "openai",
        "anthropic",
        "gemini"
    ],
    "author": "GrandpaEJ",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/GrandpaEJ/Mini_LangChain"
    },
    "napi": {
        "binaryName": "mini-langchain",
        "targets": [
            "x86_64-unknown-linux-musl",
            "aarch64-unknown-linux-gnu",
            "i686-pc-windows-msvc",
            "x86_64-pc-windows-msvc",
            "x86_64-apple-darwin",
            "aarch64-apple-darwin"
        ]
    },
    "files": [
        "index.js",
        "index.d.ts",
        "mini-langchain.*.node"
    ],
    "scripts": {
        "build": "napi build --platform --release",
        "build:debug": "napi build --platform",
        "prepublishOnly": "npx @napi-rs/cli prepublish -t npm",
        "test": "node ../tests/node/test.js",
        "test:bun": "bun ../tests/node/test.js",
        "test:ts": "tsc --noEmit --target es2020 --moduleResolution node ../tests/node/test.ts"
    },
    "devDependencies": {
        "@napi-rs/cli": "^3.5.1",
        "typescript": "^5.0.0",
        "@types/node": "^20.0.0"
    },
    "engines": {
        "node": ">= 10"
    },
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "require": "./index.js",
            "import": "./index.js",
            "default": "./index.js"
        }
    }
}