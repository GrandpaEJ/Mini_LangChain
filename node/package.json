{
    "name": "mini-langchain-node",
    "version": "0.1.0",
    "main": "index.js",
    "types": "index.d.ts",
    "napi": {
        "name": "mini-langchain",
        "triples": {
            "defaults": true,
            "additional": [
                "x86_64-unknown-linux-musl",
                "aarch64-unknown-linux-gnu",
                "i686-pc-windows-msvc",
                "aarch64-pc-windows-msvc"
            ]
        }
    },
    "scripts": {
        "build": "napi build --platform --release",
        "build:debug": "napi build --platform",
        "prepublishOnly": "napi prepublish -t npm",
        "test": "node ../tests/node/test.js",
        "test:bun": "bun ../tests/node/test.js",
        "test:ts": "tsc --noEmit --target es2020 --moduleResolution node ../tests/node/test.ts"
    },
    "devDependencies": {
        "@napi-rs/cli": "^2.18.0",
        "typescript": "^5.0.0",
        "@types/node": "^20.0.0"
    },
    "engines": {
        "node": ">= 10"
    },
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "require": "./index.js",
            "import": "./index.js",
            "default": "./index.js"
        }
    }
}